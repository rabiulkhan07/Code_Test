
import java.util.Timer;
import java.util.TimerTask;
 
public class TimerThread {

    public static void main(String[] args){
        

        Timer t = new Timer();
        t.schedule(new TimerTask() {
            @Override
            public void run() {
                System.out.println("Hello World");
            }
        }, 0, 5000);
    }
}
